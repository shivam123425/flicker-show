{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Server",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "es2020",
    "noEmit": true,
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["vite/client"],
    "allowJs": true,
    "declaration": false,
    "declarationMap": false
